@model List<Ecom.Entities.Category>
@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>
@Html.ActionLink("Create", "Create") 

@if (Model.Count == 0)
{
    <h1>There is no data in the List</h1>
}
<table id="Tabelid" class="table table-bordered table-responsive table-hover table-striped " style="border-spacing:20px 30px">
       <tr>
            <th>Name</th>
            <th>Description</th>
            <th>ThumbnailUrl</th>
            <th>Status</th>
        </tr>
     @foreach (var item in Model)
        {
         <tr>
    <td>@item.Name</td>
    <td>@item.Description</td>
    <td>   <img src="@item.Thumbnail" style="height:50px;width:50Px"  /></td>
    <td>
        (@Html.ActionLink("Edit", "Edit", new { id = item.categoryId }) |
        @Html.ActionLink("Details", "Details", new { id = item.categoryId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.categoryId }, new { onclick = "return confirm('Are sure wants to delete?');" }))
    </td>
</tr>
         }

   

</table>

